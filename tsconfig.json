{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es5",
    "outDir": ".build",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  }
}