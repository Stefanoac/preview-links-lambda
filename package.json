{
  "name": "ts-serverless-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "yarn test --watch",
    "test": "jest . --collectCoverage",
    "deploy": "rm -rf .build/ && npm run lint && npm test --ci && serverless deploy --verbose",
    "lint": "eslint ./**.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/movidesk/ts-serverless-boilerplate.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.83",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.1.0",
    "serverless-plugin-typescript": "^2.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "clearMocks": true,
    "transform": {
      "\\.ts?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.json"
      }
    }
  }
}
